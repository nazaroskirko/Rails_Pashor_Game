<style>
* {
   margin: 0;
   padding: 0;
}
#page{
  padding-top: 10vh;
  background-color: #d1e4c8;
  height: 100vh;
  text-align: center;
}
canvas{
  border: 2px solid black;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  border-radius: 2em;
}
.incorrect-message {
  position: relative;
  width: 30%;
  bottom: 140px;
  display: inline-block;
}
.leader-table-headers{
    font-size: 20px;
    color: white;
}
.rank_header{
  background-color: #80c342;
  height: 50px;
  width: 400px;
  font-size: 20px;
  text-align: center;
  margin: 20px;
  border-radius: 12px;
  box-shadow: 0px 4px 4px 0px rgba(76,166,71,1);
}
.rank_line{
  background-color: #30abda;
  height: 35px;
  font-size: 16px;
  text-align: center;
  margin: 20px;
  border-radius: 12px;
  box-shadow: 0px 4px 4px 0px gray;
  color: white;
}
.player-rank-line {
  background-color: lightgreen;
}
.rank_line:hover {
    transition: all 0.5s;
    background-color: green;
    height: 70px;
}
.rank_line .tooltip-text {
   visibility: hidden;
}
.rank_line:hover .tooltip-text {
   transition: all 0.5s;
   visibility: visible;

}
</style>
<div id="page">
  <div id="game-container">
    <!-- Phaser Canvas attaches here -->
  </div>
  <div id="leaderboard-container" class="container-fluid">
      <div class="col-sm-12 " style="margin-top: 50px">
          <div class="row">
              <div class="col-sm-6" >
                  <div class="col-sm-12">
                      <div class="row">
                          <div class="col-sm-6" align="center" style="padding-left: 60px">
                              <div class="green-button" style="height:50px; font-size:30px; color: white">
                                  Your Rank
                              </div>
                          </div>
                          <div class="col-sm-6" align="center">
                              <div class="green-button" style="height:50px; font-size:30px; color: white">
                                  Your Score
                              </div>
                          </div>
                      </div>

                  </div>
                  <div class="col-sm-12">
                      <div class="row">
                          <div class="col-sm-6" align="center" style="padding-left: 90px">
                              <div class="blue-button" style="padding:0px; width:110px; height:110px; font-size:80px; color: white" id="rank">
                                  12
                              </div>
                          </div>
                          <div class="col-sm-6" align="center">
                              <div class="blue-button"  style="padding:0px; width:180px; height:110px; font-size:80px; color: white" id="score">
                                  266
                              </div>
                          </div>
                      </div>

                  </div>
                  <div class="col-sm-12">
                      <form id="player-submit">
                          <div class="row">
                              <div class="col-sm-6" align="center" style="padding-left: 90px">
                                  <div class="form-group">
                                      <label for="formGroupExampleInput" style="color: #30abda;">First Name</label>
                                      <input type="text" style="border-color:white; border-radius: 10px" class="form-control" id="first-name" placeholder="John">
                                  </div>
                              </div>
                              <div class="col-sm-6" align="center">
                                  <div class="form-group">
                                      <label for="formGroupExampleInput2" style="color: #30abda">Last Name</label>
                                      <input type="text" style="width: 185px; border-radius: 10px; border-color:white;" class="form-control" id="last-name" placeholder="Doe">
                                  </div>

                              </div>
                          </div>
                          <div class="row" align="center" style="padding-left:90px; padding-right: 50px">
                              <div class="form-group" style="width: 100%">
                                  <label for="formGroupExampleInput3" style="color: #30abda">Email Address</label>
                                  <input type="text" class="form-control" id="email" style=" border-color:white ;border-radius: 10px" placeholder="example@ubc.ca">
                              </div>
                              <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle"
                                        type="button" id="dropdownMenu1" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                  Select Type
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                  <a class="dropdown-item" href="#">UBC Student</a>
                                  <a class="dropdown-item" href="#">Faculty</a>
                                </div>
                              </div>
                          </div>
                          <div class="col-sm-12" align="center" style="padding-left:70px">
                            <button type="submit" class="green-button" style="color: white; border: 0px">Submit</button>
                          </div>
                      </form>
                  </div>

                  <div class="col-sm-12">
                    <a class="btn" href="/api/v1/app"> <button class="green-button" style="color: white; border: 0px">Play Again?</button> </a>
                  </div>
              </div>

              <div class="col-sm-6">
                  <div class="row" style="margin: 20px;margin-bottom: 20px;height: 50px; font-size: 30px; color: white">
                          <div class="col-sm-12" align="center">
                              <img style="margin-left: 50px;" src="https://s3.ca-central-1.amazonaws.com/sorting-items/static-assets/LeaderboardBanner.png"/>
                          </div>
                  </div>
                  <div id="player-list-continer" class="col-sm-12" style="padding-right:40px; padding-left: 90px ">
                      <div class="row rank_header">
                          <div class="col-sm-3 leader-table-headers" align="center" style="padding-top: 10px">Rank</div>
                          <div class="col-sm-6 leader-table-headers" style="padding-top: 10px">Player Name</div>
                          <div class="col-sm-3 leader-table-headers" align="center" style="padding-top: 10px">Score</div>
                      </div>
                    <!-- JQuery will attach leaderboard rows here -->
                  </div>

              </div>
          </div>


      </div>


  </div>
</div>
